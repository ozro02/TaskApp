<% if current_user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      入力した内容に<%= current_user.errors.count %>件のエラーがあります。
    </div>
    <ul>
    <% current_user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
